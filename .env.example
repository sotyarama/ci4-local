# Copy this file to `.env` and fill in your environment-specific values.
# Do NOT commit `.env` with real secrets.

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost:8080/'
# app.forceGlobalSecureRequests = false
# app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
database.default.hostname = 127.0.0.1
database.default.database = pos_cafe
database.default.username = pos_user
database.default.password = YOUR_DB_PASSWORD_HERE
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# EMAIL (SMTP)
#--------------------------------------------------------------------
email.protocol = smtp
email.SMTPHost = smtp.example.com
email.SMTPPort = 587
email.SMTPCrypto = tls

email.SMTPUser = your.email@example.com
email.SMTPPass = YOUR_SMTP_PASSWORD_HERE

email.fromEmail = your.sender@example.com
email.fromName  = "Your App Name"

# Optional tuning
email.mailType = text
email.charset  = UTF-8
email.wordWrap = true
email.priority = 3

